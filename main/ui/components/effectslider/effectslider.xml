<component>
    <api>
        <prop name="title" type="string" default="GAIN"></prop>
        <prop name="variable" type="subject" default="arc1"></prop>
    </api>

    <previews>
        <preview width="400" height="200" style_pad_all="30"/>
    </previews>

    <styles>
        <style name="main" 
            bg_opa="0" border_width="0"
            width="content" height="60"
            flex_flow="column"
            />
    </styles>

    <view scrollable="false">
        <style name="main"/>
        <lv_label align="center" text="$title" style_pad_bottom="0" x="0" y="-23"></lv_label>
        <lv_slider bind_value="$variable" x="0" y="10" width="150">
            <event_cb callback="arc_changed" trigger="value_changed"/>
        </lv_slider>
        <lv_label align="center" bind_text="$variable" style_pad_top="20" x="0" y="13"></lv_label>
    </view>
</component>
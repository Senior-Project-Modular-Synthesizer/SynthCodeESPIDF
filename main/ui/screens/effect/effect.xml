<screen>
   <view style_pad_hor="5" style_pad_top="5" scrollable="false">
        <title text="Gain" align="top_left"/>

        <column height="100%" width="100%" y="25">
            <checkbox text="Check" subject="check"/> 
            <lv_label text="Sample slider"></lv_label>
            <lv_slider bind_value="arc1">
                <event_cb callback="slider_changed" trigger="value_changed"/>
            </lv_slider>
        </column>

        <lv_button style_align="bottom_mid" style_text_font="font_subtitle" align="top_right">
            <lv_label text="back"/>
            <screen_load_event screen="home"/> 
        </lv_button>
        <arc align="bottom_left" ></arc>
        <arc variable="arc2" align="bottom_right"></arc>
        
   </view>
</screen>